<%= form_with model: category, url: categories_path, :html => {:class => 'form', :id => 'form' }  do |f| %>
       <div class="field">
        <%= f.text_field :name, autofocus: true, autocomplete: "text", placeholder: "Enter category name" %>
        <% category.errors.full_messages_for(:name).each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>
       <div class="field">
       <p class="category-title"> Choose an icon </p>
       <div class="icons">
        <%= f.radio_button :icon, "fast-food-outline" %>
        <%= f.label :icon, :value => "fast-food-outline" do%>
            <ion-icon name="fast-food-outline" class="transaction-img food" value="food"></ion-icon>
        <% end %>
        <%= f.radio_button :icon, "headset" %>
        <%= f.label :icon, :value => "headset" do%>
          <ion-icon name="headset" class="transaction-img headset" value="headset"></ion-icon>
        <% end %>
        <%= f.radio_button :icon, "bulb" %>
        <%= f.label :icon, :value => "bulb" do%>
          <ion-icon name="bulb" class="transaction-img bulb" value="bulb"></ion-icon>
        <% end %>
        <%= f.radio_button :icon, "football" %>
        <%= f.label :icon, :value => "football" do%>
          <ion-icon name="football" class="transaction-img football" value="football"></ion-icon>
        <% end %>
        <%= f.radio_button :icon, "barbell" %>
        <%= f.label :icon, :value => "barbell" do%>
          <ion-icon name="barbell" class="transaction-img barbell" value="barbell"></ion-icon>
        <% end %>
        <!-- car -->
        <%= f.radio_button :icon, "car" %>
        <%= f.label :icon, :value => "car" do%>
          <ion-icon name="car" class="transaction-img car" value="car"></ion-icon>
        <% end %>
        <!-- call -->
        <%= f.radio_button :icon, "call" %>
         <%= f.label :icon, :value => "call" do%>
          <ion-icon name="call" class="transaction-img call" value="call"></ion-icon>
        <% end %>
        <!-- bus -->
        <%= f.radio_button :icon, "book" %>
         <%= f.label :icon, :value => "book" do%>
          <ion-icon name="book" class="transaction-img book" value="Education"></ion-icon>
        <% end %>
        <!-- game-controller -->
        <%= f.radio_button :icon, "game-controller" %>
        <%= f.label :icon, :value => "game-controller" do%>
          <ion-icon name="game-controller" class="transaction-img game-controller" value="Games"></ion-icon>
        <% end %>
        <!-- home -->
        <%= f.radio_button :icon, "home" %>
        <%= f.label :icon, :value => "home" do%>
          <ion-icon name="home" class="transaction-img home" value="home"></ion-icon>
        <% end %>
        <!-- shirt -->
        <%= f.radio_button :icon, "shirt" %>
        <%= f.label :icon, :value => "shirt" do%>
          <ion-icon name="shirt" class="transaction-img shirt" value="shirt"></ion-icon>
        <% end %>
        <!-- bandage -->
        <%= f.radio_button :icon, "bandage" %>
        <%= f.label :icon, :value => "bandage" do%>
          <ion-icon name="bandage" class="transaction-img bandage" value="bandage"></ion-icon>
        <% end %>
      </div>
        <% category.errors.full_messages_for(:icon).each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>

       <div id="actions">
      <%= f.submit "Add", id: 'category-btn'%>
    </div>
<% end %>
