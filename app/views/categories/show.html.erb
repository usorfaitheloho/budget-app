<section class="categories_controllers">
  <header class="input-container">
    <nav>
      <ul class='links'>
        <li>
        <%= link_to categories_path do %>
          <i class="fa fa-arrow-left"></i>
          <% end %>
        </li>
        <li>
          DETAILS
        </li>
        <li>
          <i class="fa fa-bars"></i>
        </li>
      </ul>
    </nav>
  </header>
  <section class="category-section details ">
    <div class='payment'>
      <p>TOTAL EXPENSES</p>
      <h2>$<%= @category.exchanges.sum(:amount) || '0.00' %></h2>
      <div class='desc'>
        <ion-icon id="list-img" name="<%= @category.icon %>"  class="transaction-img <%= @category.icon %>"></ion-icon>
        <span>
          <h3><%= @category.name %></h3>
        </span>
      </div>
    </div>
      <% if @transactions.present?%>
        <div class="transaction-container">
    <hr>
    <% @transactions.each do |transaction| %>
    <div class='transaction'>
      <span>
        <h3><%= transaction.name %></h3>
        <small><%= transaction.created_at.to_date.strftime("%d %b, %Y") %></small>
      </span>
      <span>
         <%= button_to "Remove", category_exchange_path(@category,transaction), method: :delete, class: 'delete-transaction' %>
      </span>
    </div>
    <hr>

   <% end %>
    <%= button_to "Delete Category", category_path, method: :delete, class: 'delete-categories' %>
</div>
  <% else %>
  <p></p>
  <% end %>

  </section>
  <div class='category-footer'>
    <%= button_to "+", new_category_exchange_path(@category), method: :get, class: 'category-btn' %>
    <p>Add New Transaction
  </div>
</section>
